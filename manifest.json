{
  "name": "Quick Switch",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "Switch between tabs of the same site, fast!",
  "minimum_chrome_version": "34",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "chrome://favicon/",
    "history",
    "tabs",
    "storage",
    "<all_urls>",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": [
      "scripts/background/chrome-api.js",
      "scripts/background/tracker.js",
      "scripts/background/index.js",
      "bower_components/handlebars/handlebars.min.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "38": "icons/icon38.png"
    },
    "default_title": "Site history"
  },
  "commands": {
    "toggle": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Toggle feature foo"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content_script/index.js"]
    }
  ],
  "web_accessible_resources": [
    "template.html",
    "style.css"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.mxpnl.com/libs/mixpanel-2-latest.min.js; object-src 'self'"
}
